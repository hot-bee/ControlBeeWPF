<Window x:Class="ControlBeeWPF.Views.KeyboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ControlBeeWPF.ViewModels"
        mc:Ignorable="d"
        Title="Keyboard" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <Style x:Key="KeyButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="KeyboardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="MinWidth" Value="58"/>
            <Setter Property="MinHeight" Value="52"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsWide}" Value="True">
                    <Setter Property="MinWidth" Value="200"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Kind}" Value="Caps">
                    <Setter Property="MinWidth" Value="78"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Kind}" Value="ABC">
                    <Setter Property="MinWidth" Value="78"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Kind}" Value="NUM">
                    <Setter Property="MinWidth" Value="78"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Kind}" Value="SYM">
                    <Setter Property="MinWidth" Value="78"/>
                </DataTrigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="WhiteSmoke"/>
                </Trigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Kind}" Value="Caps"/>
                        <Condition Binding="{Binding DataContext.IsCaps, RelativeSource={RelativeSource AncestorType=Window}}"
                                   Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="WhiteSmoke"/>
                    <Setter Property="BorderBrush" Value="DarkBlue"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Kind}" Value="Shift"/>
                        <Condition Binding="{Binding DataContext.IsShift, RelativeSource={RelativeSource AncestorType=Window}}"
                                   Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="WhiteSmoke"/>
                    <Setter Property="BorderBrush" Value="DarkBlue"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="15" Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 Name="ValueText"
                 Height="50"
                 Text="{Binding Input}"
                 Background="White"
                 BorderBrush="Black"
                 BorderThickness="1"
                 FontSize="17"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 IsReadOnly="True"
                 Focusable="False"
                 IsTabStop="False"
                 Margin="0 10" />

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Rows}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="4"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ItemsControl ItemsSource="{Binding}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Label}"
                                        Style="{StaticResource KeyboardButtonStyle}"
                                        Command="{Binding DataContext.PressKeyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="CancelButton" Content="Cancel" Width="110" Style="{StaticResource KeyButtonStyle}"
                    Click="Button_OnClick"/>
            <Button x:Name="EnterButton" Content="Enter" Width="110" Style="{StaticResource KeyButtonStyle}"
                    Click="Button_OnClick"/>
        </StackPanel>

    </Grid>
</Window>
