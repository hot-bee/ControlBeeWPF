<UserControl
    x:Class="ControlBeeWPF.Views.JogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ControlBeeWPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:JogViewModel}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style BasedOn="{StaticResource ExtrudedButtonStyle}" TargetType="Button">
                <Setter Property="Width" Value="120" />
                <Setter Property="Height" Value="40" />
            </Style>
        </Grid.Resources>
        <TabControl Margin="5">
            <TabItem Padding="10" Header="Continuous">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GroupBox
                        Grid.Row="0"
                        Margin="5"
                        Header="Speed">
                        <StackPanel
                            Margin="10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <RadioButton
                                Name="SpeedLowRadio"
                                VerticalContentAlignment="Center"
                                Content="Low" />
                            <Rectangle Width="60" />
                            <RadioButton
                                Name="SpeedMidRadio"
                                VerticalContentAlignment="Center"
                                Content="Mid"
                                IsChecked="True" />
                            <Rectangle Width="60" />
                            <RadioButton
                                Name="SpeedHighRadio"
                                VerticalContentAlignment="Center"
                                Content="High" />
                        </StackPanel>
                    </GroupBox>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <GroupBox Margin="5,0,5,5" Header="Axes">
                            <ContentControl Name="ContinuousAxesContent" />
                        </GroupBox>

                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Padding="10" Header="Step">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GroupBox
                        Grid.Row="0"
                        Margin="5"
                        Header="Step Distance">
                        <StackPanel
                            Name="DiscreteStepOptions"
                            Margin="10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <RadioButton VerticalContentAlignment="Center" Content="0.1mm" />
                            <Rectangle Width="60" />
                            <RadioButton VerticalContentAlignment="Center" Content="1mm" />
                            <Rectangle Width="60" />
                            <RadioButton VerticalContentAlignment="Center" Content="10mm" />
                        </StackPanel>
                    </GroupBox>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <GroupBox Margin="5,0,5,5" Header="Axes">
                            <ContentControl Name="DiscreteAxesContent" />
                        </GroupBox>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>