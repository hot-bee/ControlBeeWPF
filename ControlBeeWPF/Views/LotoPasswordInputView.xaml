<Window
    x:Class="ControlBeeWPF.Views.LotoPasswordInputView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LOTO Password Setup"
    Width="500"
    Height="350"
    Background="#F5F5F5"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Silver" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Height" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="5"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="5"
                                    Opacity="0.7"
                                    ShadowDepth="0" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="7"
                                            Opacity="0.8"
                                            ShadowDepth="0" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border
        Margin="10"
        Padding="20"
        Background="White"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                Text="LOTO Password Setup" />

            <TextBlock
                Grid.Row="1"
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="13"
                Foreground="DimGray"
                Text="Set a password to lock/unlock the machine" />

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Text="Password:" />
                <PasswordBox
                    Name="PasswordBox"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,15"
                    PreviewMouseLeftButtonDown="PasswordBox_OnPreviewMouseLeftButtonDown"
                    Style="{StaticResource ModernPasswordBoxStyle}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Text="Confirm:" />
                <PasswordBox
                    Name="ConfirmPasswordBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    PreviewMouseLeftButtonDown="PasswordBox_OnPreviewMouseLeftButtonDown"
                    Style="{StaticResource ModernPasswordBoxStyle}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="13"
                    Foreground="DimGray"
                    Text="Minimum 4 characters required" />
            </Grid>

            <Grid Grid.Row="3" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    Name="OkButton"
                    Grid.Column="0"
                    Background="AliceBlue"
                    Click="ButtonBase_OnClick"
                    Content="OK"
                    Style="{StaticResource ActionButtonStyle}" />

                <Button
                    Name="CancelButton"
                    Grid.Column="1"
                    Background="LavenderBlush"
                    Click="ButtonBase_OnClick"
                    Content="Cancel"
                    Style="{StaticResource ActionButtonStyle}" />
            </Grid>
        </Grid>
    </Border>
</Window>
