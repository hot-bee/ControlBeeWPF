<UserControl
    x:Class="ControlBeeWPF.Views.RecipeManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ControlBeeWPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:RecipeManagerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.Resources>
            <Style BasedOn="{StaticResource ExtrudedButtonWordWrapStyle}" TargetType="Button">
                <Setter Property="Width" Value="120" />
                <Setter Property="Height" Value="40" />
                <Setter Property="Margin" Value="0,10" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox
            Grid.Column="0"
            Padding="5"
            Header="Recipe List">
            <ListBox Name="RecipeListBox" ItemsSource="{Binding LocalNames}" />
        </GroupBox>
        <StackPanel Grid.Column="1">
            <GroupBox Margin="5" Header="Current Recipe">
                <TextBox
                    Name="RecipeName"
                    Width="120"
                    Margin="5,10"
                    Text="{Binding LocalName}" />
            </GroupBox>
            <GroupBox Margin="5" Header="Actions">
                <StackPanel>
                    <Button
                        Name="OpenButton"
                        Click="OpenButton_OnClick"
                        Content="Open" />
                    <Button
                        Name="SaveAsButton"
                        Click="SaveAsButton_OnClick"
                        Content="SaveAs" />
                    <Button
                        Name="DeleteButton"
                        Click="DeleteButton_OnClick"
                        Content="Delete" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>