<UserControl
    x:Class="ControlBeeWPF.Views.DigitalInputVariableBoolRectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        Width="{Binding VariableRectSize}"
        Height="{Binding VariableRectSize}"
        MouseLeftButtonDown="OnMouseLeftButtonDown">
        <Rectangle
            Fill="{Binding VariableBrush}"
            Stroke="Black"
            StrokeThickness="2" />
        <Rectangle
            Width="{Binding InputRectSize}"
            Height="{Binding InputRectSize}"
            Margin="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Fill="{Binding DigitalInputBrush}"
            Stroke="Black"
            StrokeThickness="2" />
    </Grid>
</UserControl>