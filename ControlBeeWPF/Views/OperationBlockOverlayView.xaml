<Window
    x:Class="ControlBeeWPF.Views.OperationBlockOverlayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    AllowsTransparency="True"
    Background="#DD000000"
    Focusable="False"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Viewbox>
            <StackPanel
                Width="700"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Border
                    Width="120"
                    Height="120"
                    Margin="0,0,0,0"
                    Background="#FFDC2626"
                    CornerRadius="60">
                    <TextBlock
                        Margin="0,0,0,30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="70"
                        Foreground="White"
                        Text="⚠" />
                </Border>

                <Border
                    Padding="20"
                    Background="#1F1F1F"
                    CornerRadius="15,15,0,0">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="45"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="LOCKOUT / TAGOUT"
                        TextAlignment="Center" />
                </Border>

                <Border
                    Padding="30"
                    Background="#2A2A2A"
                    CornerRadius="0,0,15,15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            FontSize="30"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="MACHINE OPERATIONS BLOCKED" />

                        <TextBlock
                            Margin="0,0,0,30"
                            HorizontalAlignment="Center"
                            FontSize="25"
                            Foreground="#FFA3A3A3"
                            Text="Do Not Operate &#x2022; Safety Mode Active" />

                        <Border
                            Margin="0,0,0,30"
                            Padding="20"
                            Background="#3A3A3A"
                            CornerRadius="10">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    Foreground="#FFA3A3A3"
                                    Text="LOTO Reason:" />
                                <TextBlock
                                    Name="JobNameLabel"
                                    HorizontalAlignment="Center"
                                    FontSize="28"
                                    FontWeight="Bold"
                                    Foreground="RoyalBlue"
                                    Text="On Working" />
                            </StackPanel>
                        </Border>

                        <TextBlock
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            Text="Enter Password to Unlock:" />

                        <PasswordBox
                            Name="Password"
                            Width="350"
                            Height="50"
                            Margin="0,0,0,30"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="20"
                            PasswordChar="●"
                            PreviewMouseDown="Password_OnPreviewMouseDown">
                            <PasswordBox.Resources>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Background" Value="#3A3A3A" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="#555555" />
                                    <Setter Property="BorderThickness" Value="2" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="PasswordBox">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="10" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>

                        <Button
                            Name="CloseButton"
                            Width="350"
                            Height="60"
                            Click="Button_OnClick"
                            Cursor="Hand"
                            FontSize="22"
                            FontWeight="Bold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="10">
                                        <Border.Effect>
                                            <DropShadowEffect
                                                BlurRadius="10"
                                                Opacity="0.4"
                                                ShadowDepth="3" />
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect
                                                        BlurRadius="15"
                                                        Opacity="0.6"
                                                        ShadowDepth="5" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Offset="0" Color="#FF22C55E" />
                                    <GradientStop Offset="1" Color="#FF16A34A" />
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        FontSize="24"
                                        Text="🔓" />
                                    <TextBlock Foreground="White" Text="UNLOCK MACHINE" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
