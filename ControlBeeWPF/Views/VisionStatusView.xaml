<UserControl
    x:Class="ControlBeeWPF.Views.VisionStatusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ControlBeeWPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:VisionStatusViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Control">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="Label" />
            <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="GroupBox" />
            <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="TextBox" />
            <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="Button">
                <Setter Property="Padding" Value="10" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="0,50,0,0">
            <GroupBox Header="Connection">
                <StackPanel>
                    <Label>Status</Label>
                    <TextBox Name="StatusText" Text="Unknown" />
                    <Button
                        Name="ConnectButton"
                        Margin="0,10,0,0"
                        Command="{Binding ConnectCommand}"
                        Content="Connect"
                        IsEnabled="{Binding CanConnect}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Column="2" Margin="0,50,0,0">
            <GroupBox Header="Trigger">
                <StackPanel>
                    <Label>Channel</Label>
                    <ComboBox Name="ChannelCombo" SelectedIndex="{Binding Channel}">
                        <ComboBoxItem>0</ComboBoxItem>
                        <ComboBoxItem>1</ComboBoxItem>
                        <ComboBoxItem>2</ComboBoxItem>
                        <ComboBoxItem>3</ComboBoxItem>
                        <ComboBoxItem>4</ComboBoxItem>
                        <ComboBoxItem>5</ComboBoxItem>
                        <ComboBoxItem>6</ComboBoxItem>
                        <ComboBoxItem>7</ComboBoxItem>
                    </ComboBox>
                    <Label>Insp Index</Label>
                    <ComboBox SelectedIndex="{Binding InspIndex}" Text="InspCombo">
                        <ComboBoxItem>0</ComboBoxItem>
                        <ComboBoxItem>1</ComboBoxItem>
                        <ComboBoxItem>2</ComboBoxItem>
                        <ComboBoxItem>3</ComboBoxItem>
                        <ComboBoxItem>4</ComboBoxItem>
                        <ComboBoxItem>5</ComboBoxItem>
                        <ComboBoxItem>6</ComboBoxItem>
                        <ComboBoxItem>7</ComboBoxItem>
                    </ComboBox>
                    <Separator Margin="0,10,0,10" />
                    <Button
                        Name="TriggerButton"
                        Command="{Binding TriggerCommand}"
                        Content="Trigger"
                        IsEnabled="{Binding CanTrigger}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>

    </Grid>
</UserControl>