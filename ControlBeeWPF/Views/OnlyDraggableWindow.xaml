<Window x:Class="ControlBeeWPF.Views.OnlyDraggableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="False" ResizeMode="CanResize"
        Height="450" Width="800">
    <Border Background="White" BorderBrush="Gray" BorderThickness="1">
        <DockPanel>
            <!-- Custom Title Bar -->
            <Grid DockPanel.Dock="Top" Height="30" Background="#FF2D2D30" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Name="TitleBarTextBlock" VerticalAlignment="Center" Margin="10,0" Foreground="White"/>
                <!-- You can add your own Minimize/Maximize/Close buttons here -->
            </Grid>
            <ContentControl Name="MyContent" />
        </DockPanel>
    </Border>
</Window>
