<UserControl
    x:Class="ControlBeeWPF.Views.AxisStatusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ControlBeeWPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:AxisStatusViewModel}"
    d:DesignHeight="50"
    d:DesignWidth="700"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="IndexColumn" Width="30" />
            <ColumnDefinition Name="NameColumn" Width="50" />
            <ColumnDefinition Name="PositionColumn" Width="100" />
            <ColumnDefinition Name="IsMovingColumn" Width="60" />
            <ColumnDefinition Name="IsAlarmedColumn" Width="60" />
            <ColumnDefinition Name="IsEnabledColumn" Width="50" />
            <ColumnDefinition Name="InitializeColumn" Width="50" />
            <ColumnDefinition Name="JogColumn" Width="150" />
            <ColumnDefinition Name="SensorColumn" Width="80" />
        </Grid.ColumnDefinitions>
        <Label
            Name="IndexLabel"
            Grid.Column="0"
            Margin="2,0,2,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            ToolTip="Index" />
        <Label
            Name="NameLabel"
            Grid.Column="1"
            Margin="2,0,2,0"
            VerticalContentAlignment="Center"
            Background="WhiteSmoke"
            Content="{Binding Name}"
            ToolTip="Axis Name" />
        <Grid Grid.Column="2" Margin="2,0,2,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    Content="{Binding CommandPosition}"
                    ContentStringFormat="N3"
                    FontSize="8"
                    ToolTip="Command Pos" />
                <Label
                    Grid.Row="1"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    Content="{Binding ActualPosition}"
                    ContentStringFormat="N3"
                    FontSize="8"
                    ToolTip="Actual Pos" />
            </Grid>
        </Grid>
        <Label
            Name="MovingLabel"
            Grid.Column="3"
            Margin="2,0,2,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="WhiteSmoke"
            Content="Moving"
            FontSize="8" />
        <Label
            Name="AlarmLabel"
            Grid.Column="4"
            Margin="2,0,2,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Alarm"
            FontSize="8" />
        <Grid
            Name="EnableGrid"
            Grid.Column="5"
            Margin="2,0,2,0"
            Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Enable"
                FontSize="8" />
            <Button
                Name="EnableButton"
                Grid.Row="1"
                Command="{Binding SwitchEnableCommand}"
                Content="Click"
                FontSize="8" />
        </Grid>
        <Grid
            Name="InitGrid"
            Grid.Column="6"
            Margin="2,0,2,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Name="InitLabel"
                Grid.Row="0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Init"
                FontSize="8" />
            <Button
                Grid.Row="1"
                Command="{Binding InitializeCommand}"
                Content="Click"
                FontSize="8" />
        </Grid>
        <Grid
            Grid.Column="7"
            Margin="2,0,2,0"
            Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Jog"
                FontSize="8" />
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Margin="2,0,2,0"
                        Content="Neg"
                        FontSize="8" />
                    <Button
                        Grid.Column="1"
                        Margin="2,0,2,0"
                        Content="Low"
                        FontSize="8" />
                    <Button
                        Grid.Column="2"
                        Margin="2,0,2,0"
                        Content="Pos"
                        FontSize="8" />
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="8" Margin="2,0,2,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Sensor"
                FontSize="8" />
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="NegativeLimitLabel"
                        Grid.Column="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="-"
                        FontSize="8" />
                    <Label
                        Name="HomeSensorLabel"
                        Grid.Column="1"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="H"
                        FontSize="8" />
                    <Label
                        Name="PositiveLimitLabel"
                        Grid.Column="2"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="+"
                        FontSize="8" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>