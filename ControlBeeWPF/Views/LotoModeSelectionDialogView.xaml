<Window
    x:Class="ControlBeeWPF.Views.LotoModeSelectionDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LOTO Mode Selection"
    Width="600"
    Height="300"
    Background="#F5F5F5"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ModeButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="5"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="8"
                                    Opacity="0.7"
                                    ShadowDepth="0" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="12"
                                            Opacity="0.8"
                                            ShadowDepth="0" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="ActionButtonStyle"
            BasedOn="{StaticResource ModeButtonStyle}"
            TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Window.Resources>

    <Border
        Margin="10"
        Padding="10"
        Background="White"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="#333333"
                Text="LOTO Mode Selection" />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    Name="RepairButton"
                    Grid.Column="0"
                    Click="Button_OnClick"
                    Content="Repair"
                    Style="{StaticResource ModeButtonStyle}" />

                <Button
                    Name="OnWorkingButton"
                    Grid.Column="1"
                    Click="Button_OnClick"
                    Content="On Working"
                    Style="{StaticResource ModeButtonStyle}" />

                <Button
                    Name="RestTimeButton"
                    Grid.Column="2"
                    Click="Button_OnClick"
                    Content="Rest Time"
                    Style="{StaticResource ModeButtonStyle}" />
            </Grid>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    Name="OkButton"
                    Grid.Column="0"
                    Background="AliceBlue"
                    Click="Button_OnClick"
                    Content="OK"
                    Style="{StaticResource ActionButtonStyle}" />

                <Button
                    Name="CancelButton"
                    Grid.Column="1"
                    Background="LavenderBlush"
                    Click="Button_OnClick"
                    Content="Cancel"
                    Style="{StaticResource ActionButtonStyle}" />
            </Grid>
        </Grid>
    </Border>
</Window>
