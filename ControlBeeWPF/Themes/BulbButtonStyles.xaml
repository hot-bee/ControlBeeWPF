<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:ControlBeeWPF.Components">
    <Style TargetType="{x:Type components:BulbButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0.0" Color="#FFFFFF" />
                    <GradientStop Offset="1.0" Color="#CCCCCC" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type components:BulbButton}">

                    <Grid>
                        <!--  Outer shadow or depth effect  -->
                        <Border Margin="2" Background="#888" />

                        <!--  Main button face  -->
                        <Border
                            x:Name="PART_Border"
                            Padding="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#444"
                            BorderThickness="1">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Bulb  -->
                                <Ellipse
                                    x:Name="PART_Bulb"
                                    Width="12"
                                    Height="12"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Fill="Gray" />

                                <!--  Wrapping content  -->
                                <ContentPresenter
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding Content}"
                                    RecognizesAccessKey="True">
                                    <ContentPresenter.ContentTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding}"
                                                TextAlignment="Left"
                                                TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </ContentPresenter.ContentTemplate>
                                </ContentPresenter>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Bulb" Property="Opacity" Value="0.85" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Bulb" Property="Opacity" Value="1" />
                            <Setter TargetName="PART_Border" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0.0" Color="#BBBBBB" />
                                        <GradientStop Offset="1.0" Color="#888888" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <!--  Dim background  -->
                            <Setter TargetName="PART_Border" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0.0" Color="#EEEEEE" />
                                        <GradientStop Offset="1.0" Color="#BBBBBB" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>

                            <!--  Lighter border  -->
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="#AAA" />

                            <!--  Gray text  -->
                            <Setter Property="Foreground" Value="#888888" />
                        </Trigger>
                        <DataTrigger Binding="{Binding IsBulbOn, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter TargetName="PART_Bulb" Property="Fill" Value="LimeGreen" />
                            <Setter TargetName="PART_Bulb" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="4"
                                        ShadowDepth="0"
                                        Color="LimeGreen" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>